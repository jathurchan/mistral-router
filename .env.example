# =========================================================
# HOW TO USE THIS FILE
# ---------------------------------------------------------
# 1. Copy this file to .env:
#      cp .env.sample .env
# 2. Fill in your real values (e.g., API key).
# 3. Never commit .env to git (it contains secrets).
# =========================================================

# =========================
# REQUIRED
# =========================
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_API_BASE_URL=https://api.mistral.ai/v1

# =========================
# ROUTING
# =========================
ROUTER_LENGTH_THRESHOLD=120
ROUTER_TOKEN_THRESHOLD=150
ROUTER_CONVERSATION_THRESHOLD=6

# =========================
# CLIENT
# =========================
ROUTER_CLIENT_TIMEOUT_S=15

# =========================
# MODELS
# =========================
MODEL_SMALL=mistral-small-latest
MODEL_MEDIUM=mistral-medium-latest

# =========================
# PRICING (USD / 1M tokens)
# =========================
PRICE_SMALL_INPUT=0.1
PRICE_SMALL_OUTPUT=0.3
PRICE_MEDIUM_INPUT=0.4
PRICE_MEDIUM_OUTPUT=2.0

# =========================
# LOGGING
# =========================
LOG_LEVEL=INFO
SERVICE_NAME=mistral-router

# =========================
# OPTIONAL
# =========================
# ROUTER_API_KEY=           # Separate auth key (if not set, uses MISTRAL_API_KEY)
# PORT=8000                 # Docker: Port to expose